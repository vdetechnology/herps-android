<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.cart.PaymentResultFragment">

    <data>

        <variable
            name="fragment"
            type="herbs.n.more.ui.cart.PaymentResultFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_20">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:background="?actionBarItemBackground"
                android:onClick="@{fragment::onBackHomeClick}"
                android:padding="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_check_s" />

            <TextView
                style="@style/ColorMainTextRegular15"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/ib_back"
                android:text="@string/success" />

            <RelativeLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_payment_step3">

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_30"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo" />

            <TextView
                style="@style/ColorMainTextBold15"
                android:layout_centerHorizontal="true"
                android:text="@string/thank_trust"
                android:textColor="@color/text_color_hint" />

            <TextView
                style="@style/ColorMainTextBold15"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:text="@string/order_success"
                android:textAlignment="center"
                android:textColor="@color/text_color_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/bg_item"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ColorMainTextRegular12"
                        android:layout_centerHorizontal="true"
                        android:text="@string/code_orders"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_code_orders"
                        style="@style/ColorMainTextBold15"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:text="25251325"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ColorMainTextRegular12"
                        android:layout_centerHorizontal="true"
                        android:text="@string/date_order"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_date_order"
                        style="@style/ColorMainTextBold15"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:text="10/14/2020"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ColorMainTextRegular12"
                        android:layout_centerHorizontal="true"
                        android:text="@string/total_orders"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_total_orders"
                        style="@style/ColorMainTextBold15"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:text="999.999đ"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ColorMainTextRegular12"
                        android:layout_centerHorizontal="true"
                        android:text="@string/payment_methods_lb"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_payment_methods"
                        style="@style/ColorMainTextBold15"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:text="Thanh toán khi nhận hàng"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_note"
                style="@style/TextSubRegular10"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_35"
                android:text="@string/note_orders" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_back_home"
                style="@style/App.Button.Text"
                android:layout_width="@dimen/dp_215"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_50"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="@{fragment::onBackHomeClick}"
                android:text="@string/back_to_purchase"
                app:cornerRadius="@dimen/dp_5" />

        </LinearLayout>

    </RelativeLayout>
</layout>