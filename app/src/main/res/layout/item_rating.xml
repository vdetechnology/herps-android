<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.detail.DetailActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="herbs.n.more.data.db.entities.DetailProduct" />

        <variable
            name="activity"
            type="herbs.n.more.ui.detail.DetailActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_rating"
        android:padding="@dimen/dp_15">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_2"
            android:elevation="@dimen/dp_1"
            app:cardCornerRadius="@dimen/dp_50">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avatar" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/cv_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/ColorMainTextRegular12"
                android:layout_gravity="center_vertical"
                android:text="Tran trung kien"
                android:textColor="@color/text_color_hint" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/rb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:srb_clearRatingEnabled="true"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_star_yellow"
                app:srb_drawableFilled="@drawable/ic_star_filled_yellow"
                app:srb_isIndicator="false"
                app:srb_minimumStars="0"
                app:srb_numStars="5"
                app:srb_rating="4"
                app:srb_scrollable="true"
                app:srb_starHeight="@dimen/dp_11"
                app:srb_starPadding="@dimen/dp_2"
                app:srb_starWidth="@dimen/dp_11"
                app:srb_stepSize="5" />

            <TextView
                android:id="@+id/tv_comment"
                style="@style/ColorMainTextRegular12"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="Sản phẩm tốt, xài rất ưng ý. Có tác dụng ngay"
                android:textColor="@color/text_color_hint" />

        </LinearLayout>

    </RelativeLayout>

</layout>