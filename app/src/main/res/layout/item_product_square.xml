<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="product"
            type="herbs.n.more.data.db.entities.Product" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:layout_margin="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorPrimary"
        card_view:cardBackgroundColor="@color/color_bg_item"
        card_view:cardCornerRadius="@dimen/dp_10"
        card_view:cardElevation="@dimen/dp_0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_250"
            android:padding="@dimen/dp_10">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/dp_10"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/product" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/TextNameProductRegular10"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/cv_image"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{product.title}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/tv_product_name">
                <LinearLayout
                    android:id="@+id/ll_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/rb_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_clearRatingEnabled="false"
                        app:srb_clickable="false"
                        app:srb_drawableEmpty="@drawable/ic_star"
                        app:srb_drawableFilled="@drawable/ic_star_filled"
                        app:srb_isIndicator="false"
                        app:srb_minimumStars="0"
                        app:srb_numStars="5"
                        app:srb_scrollable="false"
                        app:srb_starHeight="@dimen/dp_10"
                        app:srb_starPadding="@dimen/dp_1"
                        app:srb_starWidth="@dimen/dp_10"
                        app:srb_stepSize="1" />

                    <TextView
                        android:id="@+id/tv_number_rating"
                        style="@style/TextSubRegular10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@{String.format(@string/number_comment, product.comment)}" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/TextSubRegular10"
                        android:fontFamily="@font/roboto_regular"
                        android:visibility="@{product.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="@dimen/dp_43"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerVertical="true"
                        android:visibility="@{product.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}"
                        android:background="@color/text_sub_color" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_price_sale"
                    style="@style/ColorMainTextRegular12"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/dp_5"
                android:background="@color/colorWhite"
                card_view:cardElevation="0dp">

                <ImageButton
                    android:id="@+id/bt_like"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/dp_6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_like" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_percent_sale"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_17"
                android:background="@drawable/bg_percent_sale_home"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@{product.total_sales_percent.toString()}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_10"
                android:visibility="@{product.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>