<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                app:cardCornerRadius="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:src="@drawable/ic_avatar_holder"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_hi"
                style="@style/ColorMainTextRegular15"
                android:text="@string/say_hi"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/ColorMainTextBold15"
                android:text="Trung Kien"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/cart_container"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_search" />

        <RelativeLayout
            android:id="@+id/cart_container"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/cartButton"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:padding="@dimen/dp_2"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_cart" />
            <TextView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:text="10"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_8"
                android:background="@drawable/bg_cart_text"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_hi"
                style="@style/ColorMainTextBold20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/title_morning" />

            <com.zhpan.bannerview.BannerViewPager
                android:id="@+id/banner_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                app:bvp_indicator_slide_mode="worm"
                android:layout_gravity="right"
                app:bvp_page_style="multi_page" />

            <com.zhpan.indicator.IndicatorView
                android:id="@+id/indicator_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_view"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"/>

            <TextView
                android:id="@+id/tv_hot"
                style="@style/ColorMainTextRegular15"
                android:text="@string/best_selling"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>