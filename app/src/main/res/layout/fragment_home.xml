<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <data>
        <import type="android.view.View"/>
        <variable
            name="bestselling"
            type="herbs.n.more.ui.home.BestSellingViewModel" />
        <variable
            name="fragment"
            type="herbs.n.more.ui.home.HomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:onClick="@{() -> fragment.goToLogin()}">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    app:cardCornerRadius="@dimen/dp_50">

                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@+id/cv_image"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hi"
                            style="@style/ColorMainTextRegular15"
                            android:layout_gravity="center_vertical"
                            android:text="@string/say_hi" />

                        <TextView
                            android:id="@+id/tv_user_name"
                            style="@style/ColorMainTextBold15"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text= "@{String.format(@string/say_hi_name, bestselling.user.email != null ? bestselling.user.displayName : @string/you)}" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_login_register"
                        style="@style/ColorMainTextBold12"
                        android:layout_gravity="center_vertical"
                        android:text="@string/login_register"
                        android:visibility="@{bestselling.user.email != null ? View.GONE : View.VISIBLE}" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/searchButton"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/cart_container"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_search" />

            <RelativeLayout
                android:id="@+id/cart_container"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:onClick="@{() -> fragment.goToCart()}">

                <ImageView
                    android:id="@+id/bt_cart"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_2"
                    android:src="@drawable/ic_cart"
                    android:background="?actionBarItemBackground"/>

                <TextView
                    android:id="@+id/tv_number_in_cart"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_cart_text"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_8"
                    android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/sv_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_hi"
                        style="@style/ColorMainTextBold20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/title_morning" />

                    <com.zhpan.bannerview.BannerViewPager
                        android:id="@+id/banner_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_195"
                        app:bvp_auto_play="true"
                        app:bvp_can_loop="true"
                        app:bvp_indicator_checked_color="@color/colorPrimary"
                        app:bvp_indicator_normal_color="@color/colorIndicatorInActive"
                        app:bvp_indicator_radius="@dimen/dp_4"
                        app:bvp_indicator_slide_mode="worm"
                        app:bvp_indicator_visibility="gone"
                        app:bvp_interval="5000" />

                    <com.zhpan.indicator.IndicatorView
                        android:id="@+id/indicator_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/banner_view"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/tv_hot"
                        style="@style/ColorMainTextRegular15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/sp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="@string/best_selling" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_best_selling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"/>

                    <TextView
                        android:id="@+id/tv_more_best_selling"
                        style="@style/ColorMainTextBold12"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:text="@string/see_more"
                        android:onClick="@{fragment::seeMoreBestSelling}"/>

                    <com.zhpan.bannerview.BannerViewPager
                        android:id="@+id/banner_view_advertisement"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_155"
                        app:bvp_auto_play="true"
                        app:bvp_can_loop="true"
                        app:bvp_indicator_checked_color="@color/colorPrimary"
                        app:bvp_indicator_normal_color="@color/colorIndicatorInActive"
                        app:bvp_indicator_radius="@dimen/dp_3"
                        app:bvp_indicator_slide_mode="worm"
                        app:bvp_indicator_visibility="gone"
                        app:bvp_interval="5000"
                        app:bvp_page_margin="@dimen/dp_0"
                        app:bvp_page_style="normal"
                        app:bvp_reveal_width="@dimen/dp_0"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"/>

                    <com.zhpan.indicator.IndicatorView
                        android:id="@+id/indicator_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_0" />

                    <TextView
                        android:id="@+id/tv_recently"
                        style="@style/ColorMainTextRegular15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="@string/recently" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recently"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"/>

                    <TextView
                        android:id="@+id/tv_more_recently"
                        style="@style/ColorMainTextBold12"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:text="@string/see_more"
                        android:onClick="@{fragment::seeMoreRecently}"/>

                    <TextView
                        android:id="@+id/tv_suggested"
                        style="@style/ColorMainTextRegular15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="@string/suggested" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_suggested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"/>

                    <ProgressBar
                        android:id="@+id/pb_load_more"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:visibility="gone"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack20"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>