<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.LoginFragment">

    <data>

        <variable
            name="viewmodel"
            type="herbs.n.more.ui.auth.AuthViewModel" />

        <variable
            name="fragment"
            type="herbs.n.more.ui.auth.LoginFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login"
        android:onClick="@{() -> fragment.closeKeyBoard()}">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="centerCrop"
            android:padding="@dimen/dp_15"
            android:onClick="@{fragment::onBack}"
            android:background="?actionBarItemBackground"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_20">

            <ImageView
                android:id="@+id/image_view_logo"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_65"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_50"
                android:scaleType="fitXY"
                android:src="@drawable/ic_logo" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/image_view_logo"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/ColorMainTextRegular15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/profile_email"
                    android:textColor="@color/colorBlack" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:background="@drawable/bg_edit_text"
                    android:fontFamily="@font/utm_avo"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@id/et_password"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:text="@={viewmodel.email}"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_err_mail"
                    style="@style/ColorMainTextRegular12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:textColor="@color/text_color_error" />

                <TextView
                    android:id="@+id/tv_password"
                    style="@style/ColorMainTextRegular15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/lb_password"
                    android:textColor="@color/colorBlack" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/bg_edit_text"
                        android:fontFamily="@font/utm_avo"
                        android:hint="@string/password_hint"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_50"
                        android:text="@={viewmodel.password}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="@dimen/sp_12" />

                    <ImageButton
                        android:id="@+id/bt_show_password"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="?actionBarItemBackground"
                        android:padding="@dimen/dp_13"
                        android:scaleType="centerCrop"
                        android:onClick="@{fragment::onShowPassword}"
                        android:src="@drawable/ic_show_pass" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_err_pass"
                    style="@style/ColorMainTextRegular12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:textColor="@color/text_color_error" />

                <TextView
                    android:id="@+id/tv_forgot_password"
                    style="@style/ColorMainTextBold12"
                    android:layout_gravity="right"
                    android:text="@string/lb_login_reset_password"
                    android:onClick="@{fragment::onForgotPassword}"
                    android:textColor="@color/colorPrimary" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_log_in"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/bg_button"
                    android:fontFamily="@font/utm_avo_bold"
                    android:onClick="@{viewmodel::onLoginButtonClick}"
                    android:text="@string/lb_log_in"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ColorMainTextRegular12"
                        android:layout_gravity="center_vertical"
                        android:text="@string/lb_footer_login" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="@style/ColorMainTextBold12"
                        android:background="@drawable/border_bottom_primary"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:onClick="@{fragment::onSingup}"
                        android:text="@string/lb_sign_up" />
                </LinearLayout>

                <TextView
                    style="@style/ColorMainTextBold12"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    android:gravity="center_horizontal"
                    android:text="@string/continute_with"
                    android:textColor="@color/text_color_hint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/bt_zalo"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="@{fragment::commingSoon}"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_zalo" />

                    <ImageButton
                        android:id="@+id/bt_google"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_25"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="@{fragment::commingSoon}"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_google" />

                    <ImageButton
                        android:id="@+id/bt_face"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="@{fragment::commingSoon}"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_face" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="invisible" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>