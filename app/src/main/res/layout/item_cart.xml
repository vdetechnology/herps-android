<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="cart"
            type="herbs.n.more.data.db.entities.Cart" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/cv_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/TextNameProductRegular10"
                android:layout_marginRight="@dimen/dp_25"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@{cart.title}"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_price_sale"
                    style="@style/ColorMainTextRegular15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorBlack" />

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/tv_price_sale">

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/TextSubRegular10"
                        android:fontFamily="@font/roboto_regular"
                        android:visibility="@{cart.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="@dimen/dp_43"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerVertical="true"
                        android:background="@color/text_sub_color"
                        android:visibility="@{cart.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_percent_sale"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/rl_price"
                    android:background="@drawable/bg_percent_sale"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@{cart.total_sales_percent.toString()}"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_8"
                    android:visibility="@{cart.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_1"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/bt_minus"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/dp_4"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus" />

                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginRight="@dimen/dp_7"
                    android:background="@drawable/border_bottom_input_number"
                    android:fontFamily="@font/utm_avo"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/sp_12" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_2"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/dp_4"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_plus" />

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:id="@+id/ll_buy_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_buy_late"
                        android:layout_width="@dimen/dp_11"
                        android:layout_height="@dimen/dp_11"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_buy_late"
                        android:background="?actionBarItemBackground"
                        android:src="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/tv_buy_late"
                        style="@style/TextNameProductRegular10"
                        android:layout_alignParentRight="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/buy_later" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_close" />

    </RelativeLayout>
</layout>