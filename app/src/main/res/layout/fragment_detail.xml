<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.detail.DetailFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="herbs.n.more.data.db.entities.DetailProduct" />

        <variable
            name="activity"
            type="herbs.n.more.ui.detail.DetailFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_20">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:background="?actionBarItemBackground"
                android:onClick="@{activity::onBackClick}"
                android:padding="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_back" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/searchButton"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/cart_container"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_search" />


            <RelativeLayout
                android:id="@+id/cart_container"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:elevation="15dp"
                android:onClick="@{() -> activity.goToCart()}">

                <ImageView
                    android:id="@+id/bt_cart"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerInParent="true"
                    android:background="?actionBarItemBackground"
                    android:padding="@dimen/dp_2"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/tv_number_in_cart"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_cart_text"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_8"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cv_bottom"
            android:layout_below="@id/header">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/sv_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> activity.closeKeyBoard()}"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_370">

                        <ImageView
                            android:id="@+id/iv_no_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_370"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <com.zhpan.bannerview.BannerViewPager
                            android:id="@+id/banner_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_370"
                            app:bvp_auto_play="true"
                            app:bvp_can_loop="true"
                            app:bvp_indicator_checked_color="@color/colorPrimary"
                            app:bvp_indicator_gravity="end"
                            app:bvp_indicator_normal_color="@color/colorIndicatorInActive"
                            app:bvp_indicator_radius="@dimen/dp_4"
                            app:bvp_indicator_slide_mode="normal"
                            app:bvp_indicator_visibility="gone"
                            app:bvp_interval="5000" />

                        <TextView
                            android:id="@+id/tv_number_page"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_25"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@drawable/bg_number_pager"
                            android:fontFamily="@font/utm_avo"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_top_detail"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_product_name"
                            style="@style/TextNameProductRegular15"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cv_image"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@{product.title}" />

                        <LinearLayout
                            android:id="@+id/ll_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.willy.ratingbar.ScaleRatingBar
                                android:id="@+id/rb_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srb_clearRatingEnabled="false"
                                app:srb_clickable="false"
                                app:srb_drawableEmpty="@drawable/ic_star_yellow"
                                app:srb_drawableFilled="@drawable/ic_star_filled_yellow"
                                app:srb_isIndicator="false"
                                app:srb_minimumStars="0"
                                app:srb_numStars="5"
                                app:srb_scrollable="false"
                                app:srb_starHeight="@dimen/dp_15"
                                app:srb_starPadding="@dimen/dp_2"
                                app:srb_starWidth="@dimen/dp_15"
                                app:srb_stepSize="5" />

                            <TextView
                                android:id="@+id/tv_number_rating"
                                style="@style/TextSubRegular10"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/border_bottom"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{String.format(@string/number_comment_detail, product.comment)}"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5">

                            <TextView
                                android:id="@+id/tv_price_sale"
                                style="@style/ColorMainTextRegular12"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_20" />

                            <RelativeLayout
                                android:id="@+id/rl_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_toRightOf="@id/tv_price_sale">

                                <TextView
                                    android:id="@+id/tv_price"
                                    style="@style/TextSubRegular10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/sp_16"
                                    android:visibility="@{product.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />

                                <View
                                    android:id="@+id/line"
                                    android:layout_width="@dimen/dp_43"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_centerVertical="true"
                                    android:background="@color/text_sub_color"
                                    android:visibility="@{product.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_percent_sale"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_20"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_toRightOf="@id/rl_price"
                                android:background="@drawable/bg_percent_sale"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="@{product.total_sales_percent.toString()}"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/sp_9"
                                android:visibility="@{product.total_sales == 0 ? View.INVISIBLE : View.VISIBLE}" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_5"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_2"
                                app:cardUseCompatPadding="true">

                                <ImageButton
                                    android:id="@+id/bt_like"
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:background="@color/colorWhite"
                                    android:onClick="@{() -> activity.onLikeDetail()}"
                                    android:padding="@dimen/dp_6"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_like" />

                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="3"
                        android:background="@drawable/bg_item"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">

                        <RelativeLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_policy1"
                                android:layout_width="@dimen/dp_95"
                                android:layout_height="@dimen/dp_95"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:outlineAmbientShadowColor="@color/colorPrimary"
                                android:outlineSpotShadowColor="@color/colorPrimary"
                                app:cardCornerRadius="@dimen/dp_10"
                                app:cardElevation="2dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dp_2">

                                    <ImageView
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/ic_policy1" />

                                    <TextView
                                        android:id="@+id/tv_policy1"
                                        style="@style/TextSubRegular10"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_3"
                                        android:gravity="center"
                                        android:text="@string/policy1"
                                        android:textColor="@color/text_color_hint"
                                        android:textSize="@dimen/sp_8" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_policy2"
                                android:layout_width="@dimen/dp_95"
                                android:layout_height="@dimen/dp_95"
                                android:layout_centerInParent="true"
                                android:outlineAmbientShadowColor="@color/colorPrimary"
                                android:outlineSpotShadowColor="@color/colorPrimary"
                                app:cardCornerRadius="@dimen/dp_10"
                                app:cardElevation="2dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="@dimen/dp_28"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/ic_policy2" />

                                    <TextView
                                        android:id="@+id/tv_policy2"
                                        style="@style/TextSubRegular10"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_3"
                                        android:gravity="center"
                                        android:text="@string/policy2"
                                        android:textColor="@color/text_color_hint"
                                        android:textSize="@dimen/sp_8" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_policy3"
                                android:layout_width="@dimen/dp_95"
                                android:layout_height="@dimen/dp_95"
                                android:layout_centerInParent="true"
                                android:outlineAmbientShadowColor="@color/colorPrimary"
                                android:outlineSpotShadowColor="@color/colorPrimary"
                                app:cardCornerRadius="@dimen/dp_10"
                                app:cardElevation="2dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/ic_policy3" />

                                    <TextView
                                        android:id="@+id/tv_policy3"
                                        style="@style/TextSubRegular10"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_3"
                                        android:gravity="center"
                                        android:text="@string/policy3"
                                        android:textColor="@color/text_color_hint"
                                        android:textSize="@dimen/sp_8" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_item"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:background="@drawable/ic_info" />

                            <TextView
                                style="@style/TextNameProductRegular10"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:text="@string/info_detail"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHintBold12"
                                android:text="@string/producer"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_producer"
                                style="@style/TextHintRegular12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHintBold12"
                                android:text="@string/specification"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_specification"
                                style="@style/TextHintRegular12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHintBold12"
                                android:text="@string/dosage_forms"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_dosage_forms"
                                style="@style/TextHintRegular12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHintBold12"
                                android:text="@string/expiry_date"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_expiry_date"
                                style="@style/TextHintRegular12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHintBold12"
                                android:text="@string/category"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_category"
                                style="@style/TextHintRegular12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextHintBold12"
                                android:text="@string/key_word"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_key_word"
                                style="@style/TextHintRegular12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_item"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <LinearLayout
                            android:id="@+id/ll_lable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:background="@drawable/ic_paper" />

                            <TextView
                                style="@style/TextNameProductRegular10"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:text="@string/description"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_description"
                            style="@style/TextHintRegular12"
                            android:layout_marginTop="@dimen/dp_15"
                            android:ellipsize="end"
                            android:maxLines="6"
                            android:text="@{product.description}" />

                        <TextView
                            android:id="@+id/tv_see_more"
                            style="@style/ColorMainTextRegular12"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/border_bottom_primary"
                            android:onClick="@{activity::onSeeMoreClick}"
                            android:text="@string/see_more"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_see_less"
                            style="@style/ColorMainTextRegular12"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/border_bottom_primary"
                            android:onClick="@{activity::onSeeLessClick}"
                            android:text="@string/see_less"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_item"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_15">

                        <TextView
                            style="@style/TextNameProductRegular10"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="@string/rating_product"
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:id="@+id/ll_rating1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_7"
                            android:layout_marginRight="@dimen/dp_15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.willy.ratingbar.ScaleRatingBar
                                android:id="@+id/rb_rating1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srb_clearRatingEnabled="false"
                                app:srb_clickable="false"
                                app:srb_drawableEmpty="@drawable/ic_star_yellow"
                                app:srb_drawableFilled="@drawable/ic_star_filled_yellow"
                                app:srb_isIndicator="false"
                                app:srb_minimumStars="0"
                                app:srb_numStars="5"
                                app:srb_scrollable="false"
                                app:srb_starHeight="@dimen/dp_13"
                                app:srb_starPadding="@dimen/dp_2"
                                app:srb_starWidth="@dimen/dp_13"
                                app:srb_stepSize="5" />

                            <TextView
                                android:id="@+id/tv_number_rating1"
                                style="@style/TextSubRegular10"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@{String.format(@string/number_comment, product.comment)}"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@color/colorWhite" />

                        <include layout="@layout/item_rating" />

                        <include layout="@layout/item_rating" />

                        <TextView
                            android:id="@+id/tv_see_all"
                            style="@style/ColorMainTextRegular12"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/border_bottom_primary"
                            android:text="@string/see_all"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_item"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:background="@drawable/ic_note" />

                            <TextView
                                style="@style/TextNameProductRegular10"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:text="@string/your_rating"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <com.willy.ratingbar.ScaleRatingBar
                            android:id="@+id/rb_your_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            app:srb_clearRatingEnabled="true"
                            app:srb_clickable="true"
                            app:srb_drawableEmpty="@drawable/ic_star_yellow"
                            app:srb_drawableFilled="@drawable/ic_star_filled_yellow"
                            app:srb_isIndicator="false"
                            app:srb_minimumStars="0"
                            app:srb_numStars="5"
                            app:srb_rating="5"
                            app:srb_scrollable="true"
                            app:srb_starHeight="@dimen/dp_30"
                            app:srb_starPadding="@dimen/dp_4"
                            app:srb_starWidth="@dimen/dp_30"
                            app:srb_stepSize="1" />

                        <EditText
                            android:id="@+id/et_comment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_85"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/bg_rating_form"
                            android:fontFamily="@font/utm_avo"
                            android:gravity="top"
                            android:hint="@string/rating_hint"
                            android:inputType="textMultiLine"
                            android:nextFocusDown="@id/et_mail"
                            android:overScrollMode="always"
                            android:padding="@dimen/dp_15"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/text_color_hint"
                            android:textSize="@dimen/sp_10" />

                        <EditText
                            android:id="@+id/et_mail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/bg_rating_form"
                            android:fontFamily="@font/utm_avo"
                            android:hint="@string/rating_email_hint"
                            android:inputType="textEmailAddress"
                            android:nextFocusDown="@id/et_name"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:text="@{activity.user.email}"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/text_color_hint"
                            android:textSize="@dimen/sp_10" />

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/bg_rating_form"
                            android:fontFamily="@font/utm_avo"
                            android:hint="@string/rating_name_hint"
                            android:imeOptions="actionDone"
                            android:inputType="textPersonName"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:text="@{activity.user.displayName}"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/text_color_hint"
                            android:textSize="@dimen/sp_10" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_submit"
                            style="@style/App.Button.Text"
                            android:layout_width="@dimen/dp_220"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="@string/rating" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_suggested"
                        style="@style/ColorMainTextRegular15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/hints_for_you" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_suggested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/dp_3"
            android:onClick="@{() -> activity.closeKeyBoard()}"
            android:outlineAmbientShadowColor="@color/colorBlack"
            android:outlineSpotShadowColor="@color/colorBlack"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/dp_25"
            app:cardElevation="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_25"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_25"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_add"
                        style="@style/App.Button.Text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="@{() ->activity.flyToCart()}"
                        app:cornerRadius="@dimen/dp_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_7">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/ic_cart_plus" />

                        <TextView
                            style="@style/TextSubRegular10"
                            android:text="@string/add_to_cart"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_buy"
                    style="@style/App.Button.Text"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1.8"
                    android:backgroundTint="@color/text_color_error"
                    android:onClick="@{() ->activity.buyNow()}"
                    android:text="@string/buy_now"
                    app:cornerRadius="@dimen/dp_10" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:elevation="10dp" />

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack20"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_move_cart"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentBottom="true"
            android:elevation="5dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>
</layout>