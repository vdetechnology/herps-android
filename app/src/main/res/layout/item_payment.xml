<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="cart"
            type="herbs.n.more.data.db.entities.Cart" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/cv_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/TextNameProductRegular10"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{cart.title}"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/ColorMainTextRegular15"
                    android:text="@{cart.amount.toString()}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    style="@style/ColorMainTextRegular15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="x"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_price_sale"
                    style="@style/ColorMainTextRegular15"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>